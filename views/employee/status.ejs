<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <p><%= regg.Name %></p>
    <p id="date"><%= regg.vaccDate %></p>
    <p id="vacc-type"><%= regg.vaccine %></p>

        
    <div id="dose-status">
        <form action="/employees/<%= regg.id2 %>/dose-status" method="POST">
            <h4>First Dose</h4>
            <input type="radio" id="yes" name="firstDose" value="Yes">
            <label for="yes">Yes</label>
            <input type="radio" id="no"  name="firstDose" value="No">
            <label for="no">No</label>
        
            <h4>Second Dose</h4>
            <input type="radio" id="yes" name="secondDose" value="Yes">
            <label for="yes">Yes</label>
            <input type="radio" id="no"  name="secondDose" value="No">
            <label for="no">No</label>
            <input type="submit" value="Check eligibilty">
        </form>
    </div>
    <script>
        const d = document.getElementById('date').innerHTML;
        const vacc = document.getElementById('vacc-type');
        const status = document.getElementById('dose-status');
        console.log(status);

        var date = d.substring(8, 10);
        

        var today = new Date();
        var dd = String(today.getDate()).padStart(2, '0');
        var dt = parseInt(dd);
        var dv = parseInt(date);
        console.log(dt);
        console.log(dv);
        

        if(dv > dt){
            status.style.display = "none";
        }


    </script>
</body>
</html>